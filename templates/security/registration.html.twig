{% extends 'base.html.twig' %}

{% block vue %}
    <h1>Inscrition sur le site</h1>
    {{ form_start(form) }}

    {{ form_row(form.nom, {'label':'Nom', 'attr' : {'placeholder' : 'Votre Nom'}}) }}
    {{ form_row(form.prenom, {'label':'Prenom', 'attr' : {'placeholder' : 'Votre Prenom'}}) }}
    {{ form_row(form.birthday, {'label':'Date de naissance', 'attr' : {'placeholder' : 'Votre date de naissance'}}) }}
    {{ form_row(form.email, {'label':'Email', 'attr' : {'placeholder' : 'adresse email'}}) }}
    {{ form_row(form.password, {'label':'Mot de passe', 'attr' : {'placeholder' : 'mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label':'Confirmation','attr' : {'placeholder' : 'confirmation'}}) }}
    <button type="submit" class="btn btn-success">Inscrition !</button>

    {{ form_end(form) }}
{% endblock %}